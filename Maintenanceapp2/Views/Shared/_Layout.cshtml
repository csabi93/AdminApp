
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Admin Application</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/kendo/2017.2.621/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        kendo.culture("@System.Threading.Thread.CurrentThread.CurrentCulture.Name");
    </script>
</head>
<body>
    <div id="menuAll">
        @(Html.Kendo().Menu()
         .Name("Menu")
         .OpenOnClick(true)
         .Items(items =>
         {
             items.Add().Text("BusPars").Url("BusPar");
             items.Add().Text("BusFuncs")
                 .Items(children =>
                 {
                     children.Add().Text("BusFuncsWithTechfuncs").Url("BusFunc");
                     children.Add().Text("BusFuncsWithBusPars").Url("BusFuncWithBusPar");
                 });
    

             items.Add().Text("TechFuncs").Url("TechFunc");
             items.Add().Text("BusParOfBusFuncs").Url("BusParOfBus"); })
        )
    </div>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>



    <style>
        #menuAll {
            max-width:600px;
            height: auto;
            margin:  auto;
            padding-top: 120px;
            text-shadow: 3px 2px red;
            font-size:larger;
            background: url(@Url.Content("~/image/header.jpg")) no-repeat center 0;

        }

        #menu h2 {
            font-size: 5em;
            text-transform: uppercase;
            padding: 5px 10px;
        }

        #template img {
            margin: 5px 20px 0 0;
            float: left;
        }

        #template {
            width: 500px;
        }

            #template ol {
                float: left;
                margin: 0 0 0 30px;
                padding: 10px 10px 0 10px;
            }

            #template:after {
                content: ".";
                display: block;
                height: 0;
                clear: both;
                visibility: hidden;
            }

            #template .k-button {
                float: left;
                clear: left;
                margin: 5px 0 5px 12px;
            }
            body{
                background-color: lightblue;
            }
             h2 {
             color: black;
            text-align: center;
            }
        .header {
    background-color: #4cff00;
    text-align: center;
    padding: 20px;
}
    </style>


</body>


</html>
